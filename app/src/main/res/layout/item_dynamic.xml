<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        app:cardElevation="2dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:background="@drawable/ripple"
            android:orientation="horizontal"
            android:padding="@dimen/card_content_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/avatar_max_img"/>

            <LinearLayout
                android:paddingStart="@dimen/card_content_padding"
                android:paddingLeft="@dimen/card_content_padding"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dynamic_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/abc_action_bar_home_description"
                    android:textColor="@android:color/tertiary_text_light"
                    />

                <TextView
                    android:id="@+id/dynamic_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_subhead_material"
                    android:textColor="@android:color/black"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="10dp"
                    />

                <TextView
                    android:id="@+id/dynamic_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/tertiary_text_light"
                    android:paddingBottom="3dp"
                    android:paddingRight="10dp"/>

                <TextView
                    android:id="@+id/dynamic_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="浏览"
                    android:textColor="@android:color/tertiary_text_light"
                    />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <View
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </View>
</LinearLayout>
